{{#partial "content"}}
    <h1>POSTS POSTED!</h1>

    {{#if posts}} <!--if posts exist, then -->
    {{#each posts}} <!--loop-->
    <p>Current post:</p>
    <p> {{ content }}
    <a href="/posts/{{id}}">READ-MORE!</a></p>  <!--show-->
    {{/each}}
    {{else}} <!--no posts!-->
    <p>NO POSTS!</p>
    {{/if}}
{{/partial}}
{{> layout.hbs}}
