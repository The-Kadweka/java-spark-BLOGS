{{#partial "content"}}
    <p>Content:</p>
    <p>{{ post.content }}</p>
    <h5>Created At:</h5>
    <p> {{ post.createdAt }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {{/if}}
        <a href="/posts/{{post.id}}/update"><button type="button" class="btn btn-light">EDIT</button></a> </p><br>
    <a href="/posts/{{post.id}}/delete"><button type="button" class="btn btn-light">DELETE</button></a>
    </p>
{{/partial}}

{{> layout.hbs}}